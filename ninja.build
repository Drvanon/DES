ninja_required_version = 1.8

sources = des.c system/system_velocity.c assemblage.c
cflags = -Wall
ldflags = -Icomponents -Isystems

rule default
    command = gcc $cflags $in -o $out $ldflags

rule debug
    command = gcc $cflags $in -o $out $ldflags

rule sanitze
    command = clang $cflags $in -o $out $ldflags

